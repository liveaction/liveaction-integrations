# ==========================
# BlueCat BAM configuration
# ==========================
BAM_BASE=https://bam.example.com
BAM_USER=apiuser
BAM_PASS=apipassword
BAM_CIDR=10.42.0.0/24
BAM_VERIFY_TLS=false          # true = verify BAM SSL cert, false = ignore

# ==========================
# ClickHouse configuration
# ==========================
CH_HOST=clickhouse.example.local
CH_PORT=8443                  # HTTPS/TLS port (8123 if plain HTTP)
CH_USER=default
CH_PASS=secretpassword
CH_DB=netops
CH_TABLE=ipam_devices

# ==========================
# TLS/mTLS options
# ==========================
CH_SECURE=true                # true = use HTTPS
CH_VERIFY=false               # false = ignore server cert; true = validate; or path to CA file
CH_CLIENT_CERT=/etc/ssl/my-app.crt   # optional: client cert (PEM)
CH_CLIENT_KEY=/etc/ssl/my-app.key    # optional: client key (PEM)

# ==========================
# Runtime behavior
# ==========================
PAGE_SIZE=1000
